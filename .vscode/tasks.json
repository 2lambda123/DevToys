{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-wasm",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/app/dev/platforms/web/DevToys.Wasm/DevToys.Wasm.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build-macos",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "build",
        "${workspaceFolder}/src/app/dev/platforms/desktop/macos/DevToys.MacOS/DevToys.MacOS.csproj",
        "-t:${input:target}",
        "-f:net7.0-maccatalyst",
        "-c:${input:configuration}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "run-macos",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "build",
        "${workspaceFolder}/src/app/dev/platforms/desktop/macos/DevToys.MacOS/DevToys.MacOS.csproj",
        "-t:Run",
        "-f:net7.0-maccatalyst",
        "-c:${input:configuration}",
        "--no-restore"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build-cli",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/app/dev/platforms/desktop/DevToys.CLI/DevToys.CLI.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "type": "typescript",
      "tsconfig": "bin/Debug/AnyCPU/DevToys.MacOS/net7.0-maccatalyst/maccatalyst-arm64/devtoys.monacoeditor/ts-helpermethods/ts-helpermethods-Wasm/tsconfig.json",
      "problemMatcher": [
        "$tsc"
      ],
      "group": "build",
      "label": "tsc: build - bin/Debug/AnyCPU/DevToys.MacOS/net7.0-maccatalyst/maccatalyst-arm64/devtoys.monacoeditor/ts-helpermethods/ts-helpermethods-Wasm/tsconfig.json"
    }
  ],
  "inputs": [
    {
      "id": "target",
      "type": "pickString",
      "default": "Build",
      "description": "Select MSBuild target",
      "options": [
        "Build",
        "Rebuild",
        "Clean"
      ]
    },
    {
      "id": "configuration",
      "type": "pickString",
      "default": "Debug",
      "description": "Select MSBuild configuration",
      "options": [
        "Debug",
        "Release"
      ]
    }
  ]
}