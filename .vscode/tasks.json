{
    "version": "2.0.0",
    "inputs": [
        {
            // Add additional projects here. They will be available in the drop down
            // in vscode.
            "id": "project",
            "type": "pickString",
            "default": "${workspaceFolder}/src/app/dev/platforms/desktop/DevToys.MauiBlazor/DevToys.MauiBlazor.csproj",
            "description": "Pick the Project you want to build.",
            "options": [
                "${workspaceFolder}/src/app/dev/platforms/desktop/DevToys.MauiBlazor/DevToys.MauiBlazor.csproj",
            ]
        },
        {
            // Add additional projects here. They will be available in the drop down
            // in vscode.
            "id": "framework",
            "type": "pickString",
            "default": "net7.0-maccatalyst",
            "description": "Pick the framework you want to target.",
            "options": [
                "net7.0-maccatalyst",
                "net7.0-windows",
            ]
        },
        {
            "id": "configuration",
            "type": "pickString",
            "default": "Debug",
            "description": "The Build Configuration",
            "options": [
                "Debug",
                "Release"
            ]
        },
    ],
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "${input:project}",
                "-f:${input:framework}",
                "-c:${input:configuration}",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            // Use the standard MS compiler pattern to detect errors, warnings and infos
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "${input:project}",
                "-t:Run",
                "-f:${input:framework}",
                "-c:${input:configuration}",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            },
            "group": {
                "kind": "none",
                "isDefault": false
            },
            // Use the standard MS compiler pattern to detect errors, warnings and infos
            "problemMatcher": ["$msCompile"]
        }
    ]
}



